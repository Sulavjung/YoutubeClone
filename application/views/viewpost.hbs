<main class="videoPage">
  <h2>View Post</h2>
  <section class="videoSection">
    <div class="videoSide">

      <div class="video">
        <video controls >
          <source src="/{{post.video}}" type="video/mp4" />
        </video>
      </div>

      <p class="videoTitle">
        {{post.title}}
      </p>

      <div class="authAndCreation">
        <p class="videoAuthor">
          {{post.username}}
        </p>
        <p class="videoCreationTime">
          {{ formatDateString post.createdAt}}
        </p>
      </div>
    </div>

